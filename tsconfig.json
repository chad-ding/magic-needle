{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "es2015",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*",
        "node_modules/chalk",
        "node_modules/inquirer"
    ],
}